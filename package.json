{
  "name": "nunjucks",
  "description": "A powerful templating engine with inheritance, asynchronous control, and more (jinja2 inspired)",
  "version": "3.2.4",
  "author": "James Long <longster@gmail.com>",
  "dependencies": {
    "a-sync-waterfall": "^1.0.0",
    "asap": "^2.0.3",
    "commander": "^5.1.0",
    "he": "^1.2.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-instrument": "^6.0.3",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "node-polyfill-webpack-plugin": "^4.0.0",
    "puppeteer": "^23.5.1",
    "puppeteer-to-istanbul": "^1.4.0"
  },
  "browser": "./browser/nunjucks.js",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.38",
    "@babel/core": "^7.25.8",
    "@babel/plugin-transform-modules-commonjs": "^7.25.7",
    "@babel/preset-env": "^7.25.8",
    "@babel/register": "^7.0.0-beta.38",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-module-resolver": "3.0.0-beta.5",
    "connect": "^3.6.5",
    "core-js": "^2.5.3",
    "cross-env": "^5.1.3",
    "eslint": "^9.12.0",
    "expect.js": "*",
    "express": "4.x",
    "fs-extra": "^5.0.0",
    "get-port": "^3.2.0",
    "mocha": "< 8.x",
    "module-alias": "^2.0.3",
    "node-libs-browser": "^0.7.0",
    "nyc": "^17.1.0",
    "phantomjs-prebuilt": "^2.1.16",
    "serve-static": "^1.13.1",
    "supertest": "*",
    "terser-webpack-plugin": "^5.3.10",
    "uglify-js": "^2.8.29",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "buildDependencies": {
    "@babel/cli": "^7.0.0-beta.38",
    "@babel/core": "^7.0.0-beta.38",
    "@babel/preset-env": "^7.0.0-beta.38",
    "@babel/register": "^7.0.0-beta.38",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-module-resolver": "3.0.0-beta.5",
    "core-js": "^2.5.3",
    "module-alias": "^2.0.3",
    "node-libs-browser": "^0.7.0",
    "uglify-js": "^2.8.29",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.10.0"
  },
  "peerDependencies": {
    "chokidar": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "chokidar": {
      "optional": true
    }
  },
  "_moduleAliases": {
    "babel-register": "@babel/register"
  },
  "engines": {
    "node": ">= 6.9.0"
  },
  "scripts": {
    "codecov": "codecov",
    "mocha": "mocha -R spec tests",
    "lint": "eslint nunjucks scripts tests",
    "prepare": "npm run build",
    "build:transpile": "babel nunjucks --out-dir .",
    "build:transpile:coverage:browser": "cross-env BABEL_ENV=test-browser babel nunjucks --out-dir .",
    "build:bundle": "node scripts/bundle.js",
    "build:bundle:coverage:browser": "cross-env BABEL_ENV=test-browser node scripts/bundle.js",
    "build": "npm run build:transpile && npm run build:bundle",
    "build:coverage:browser": "npm run build:transpile:coverage:browser && npm run build:bundle:coverage:browser",
    "test:prep:precompile": "node scripts/runprecompile.js",
    "test:prep:bundle:browser": "webpack --config scripts/webpack.browser-test.config.js",
    "test:prep:instrument:node": "cross-env NODE_ENV=test scripts/bundle.js",
    "test:run:node": "cross-env NODE_PATH=./tests/test-node-pkgs nyc mocha --require @babel/register tests",
    "test:run:browser": "npm run test:prep:bundle:browser && node scripts/testrunner.js",
    "test:tool:merge-coverage": "nyc merge .nyc_output coverage && nyc report --reporter=text",
    "test:node": "npm run test:prep:precompile && npm run test:run:node",
    "test:browser": "npm run test:prep:precompile && npm run test:run:browser",
    "test": "npm run lint && npm run test:prep:instrument:node && npm run test:node && npm run test:browser && npm run test:tool:merge-coverage"
  },
  "bin": {
    "nunjucks-precompile": "./bin/precompile"
  },
  "main": "index.js",
  "files": [
    "bin/**",
    "browser/**",
    "src/**"
  ],
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "*.min.js",
      "scripts/**",
      "tests/**",
      "src/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/nunjucks.git"
  },
  "keywords": [
    "template",
    "templating"
  ],
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/mozilla/nunjucks/issues"
  }
}
