{
  "presets": [
    ["@babel/preset-env", {
      "loose": true,
      "targets": {
        "browsers": [
          ">0.2%",
          "not dead",
          "not op_mini all"
        ],
        "node": "current"
      }
    }]
  ],
  "env": {
    "test": {
      "plugins": [
        "babel-plugin-istanbul"
      ],
      "ignore": [
        "**/node_modules/**",
        "**/*.min.js",
        "**/tests/browser/**",
        "scripts/**"
      ]
    }
  }
}