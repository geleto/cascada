{
	"version": "0.2.0",
	"configurations": [
	  {
		"type": "node",
		"request": "launch",
		"name": "Mocha Tests",
		"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
		"args": [
		  "-R",
		  "spec",
		  "--timeout",
		  "999999",
		  "--colors",
		  "${workspaceFolder}/tests"
		],
		"env": {
		  "NODE_ENV": "test",
		  "NODE_PATH": "${workspaceFolder}/tests/test-node-pkgs"
		},
		"cwd": "${workspaceFolder}",
		"internalConsoleOptions": "openOnSessionStart",
		"preLaunchTask": "npm: build",
		"autoAttachChildProcesses": false,
		"skipFiles": [
		  "<node_internals>/**"
		]
	  },
	  {
		"type": "node",
		"request": "launch",
		"name": "Run All Tests",
		"program": "${workspaceFolder}/scripts/testrunner.js",
		"env": {
		  "NODE_ENV": "test",
		  "NODE_PATH": "${workspaceFolder}/tests/test-node-pkgs"
		},
		"cwd": "${workspaceFolder}",
		"console": "integratedTerminal",
		"internalConsoleOptions": "openOnSessionStart",
		"runtimeArgs": [
		  "--nolazy",
		  "--inspect-brk=9229" // Ensure debugger pauses at the very beginning
		],
		"preLaunchTask": "npm: test:instrument",
		"autoAttachChildProcesses": true, // Automatically attach to child processes spawned by the testrunner
		"skipFiles": [
		  "<node_internals>/**"
		]
	  }
	]
  }